<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="7dp"
    android:elevation="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <!--        <ImageView-->
        <!--            android:id="@+id/imageViewLuotThichBaiHat"-->
        <!--            android:layout_width="20dp"-->
        <!--            android:layout_height="20dp"-->
        <!--            android:src="@drawable/ic_white_love"-->
        <!--            android:layout_alignParentRight="true"-->
        <!--            android:layout_centerVertical="true"-->
        <!--            android:layout_marginRight="5dp"/>-->
        <TextView
            android:id="@+id/txtListIndex"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewtop"
            android:layout_width="75dp"
            android:layout_height="65dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@+id/txtListIndex"
            android:padding="2dp" />

        <TextView
            android:id="@+id/txtHeaderItemDao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imageViewtop"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:maxLines="1"
            android:text="Ten Ca Khúc"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtTitleItemDao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewtop"
            android:layout_marginTop="-32dp"
            android:layout_toRightOf="@+id/imageViewtop"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Ca sĩ"
            android:textColor="#979797"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/imgBtnUpdate"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/pen"
            android:text="S" />

        <ImageButton
            android:id="@+id/imgBtnDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/remove"
            android:text="X" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>